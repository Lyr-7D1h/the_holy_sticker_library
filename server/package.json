{
  "name": "server",
  "private": true,
  "version": "1.0.0",
  "description": "A whatsapp bot for saving and sending stickers",
  "main": "build/index.js",
  "scripts": {
    "start": "npm run start:dev",
    "build": "rm -rf ./build && tsc -p tsconfig.json",
    "watch:dev": "NODE_ENV=development tsc --watch -p ./tsconfig.dev.json ",
    "watch:shared": "tsc -b --clean ../shared ; tsc -b --watch ../shared",
    "start:dev": "PASSWORD=hsl NODE_ENV=development tsnd --project ./tsconfig.dev.json --respawn --exit-child --rs --clear ./src ",
    "start:prod": "node .",
    "test": "tap test/**/*.test.ts",
    "linter": "npx eslint --max-warnings 0 --ext .ts ./src"
  },
  "keywords": [
    "bot",
    "whatsapp"
  ],
  "_moduleAliases": {
    "@shared": "../shared/build"
  },
  "author": "Lyr",
  "license": "ISC",
  "dependencies": {
    "fastify": "^3.10.1",
    "fastify-autoload": "^3.4.0",
    "fastify-formbody": "^5.0.0",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.1.0",
    "fastify-static": "^3.3.1",
    "module-alias": "^2.2.2",
    "pino": "^6.9.0",
    "puppeteer": "^5.5.0",
    "rxjs": "^6.6.3",
    "sqlite3": "^5.0.0",
    "venom-bot": "^2.2.3",
    "ws": "^7.4.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.20",
    "@types/pino": "^6.3.5",
    "@types/sqlite3": "^3.1.6",
    "@types/tap": "^14.10.1",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.2.1",
    "tap": "^14.11.0",
    "ts-node-dev": "^1.1.1"
  }
}
